{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "allowJs": true,
    "lib": ["es7"],
    "sourceMap": true,
    "moduleResolution": "node",
    "rootDir": "server",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "types": [
      "node",
      "cookie-session"
    ]
  },
  "include": [
    "server/**/*.ts",
    "server/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "e2e",
    "src",
    "server/test/**/*",
    "server/**/*.spec.js"
  ]
}
